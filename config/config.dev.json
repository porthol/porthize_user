{
  "user": {
    "databases": [
      {
        "host": "localhost",
        "port": 27017
      }
    ],
    "databaseName": "user",
    "traefik": {
      "gatewayAddress": "127.0.0.1",
      "gatewayPort": 3000,
      "nameRules": "{serviceName}.service"
    },
    "authorizationService": {
      "name": "user",
      "addRoute": "privileges/{resource}/routes",
      "authorizationRoute": "users/isAuthorized",
      "authenticationRoute": "token"
    },
    "jwt": {
      "options": {
        "expiresIn": "365d"
      }
    }
  }
}
